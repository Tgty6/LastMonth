version: '3'
services:
    shop_api:
        build:
            context: .
        command: python manage.py runserver 0.0.0.0:8000

        volumes:
            - .:/app
        ports:
            - "3000:8000"
        depends_on:
            - shopdb
    shopdb:
        image: "postgres:14"
        environment:
            POSTGRES_DB: "shop_project_db"
            POSTGRES_USER: "shop_project_user_db"
            POSTGRES_PASSWORD: "1234"
        volumes:
            - "shop-data:/var/lib/postgresql/data"
volumes:
        shop-data:

